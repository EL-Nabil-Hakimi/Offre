$conn = $connection->conn;

if (isset($_GET['q'])) {
    $searchTerm = $_GET['q'];

    // Utiliser la valeur de recherche pour effectuer la recherche dans la base de données
    $sql = "SELECT * FROM offre WHERE titre LIKE '%$searchTerm%'";
    $result = mysqli_query($conn, $sql);

    // Renvoyer les résultats de recherche
    while ($row = mysqli_fetch_assoc($result)) {
        echo '<article class="postcard light green">';
        // ... (Le reste de votre code HTML pour afficher les résultats de la recherche)
        echo '</article>';
    }
}
?>